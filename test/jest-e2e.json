{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^@my-common(.*)$": "<rootDir>/../src/common$1",
    "^@my-environment(.*)$": "<rootDir>/../src/environment$1",
    "^@my-interfaces(.*)$": "<rootDir>/../src/interface$1"
  }
}